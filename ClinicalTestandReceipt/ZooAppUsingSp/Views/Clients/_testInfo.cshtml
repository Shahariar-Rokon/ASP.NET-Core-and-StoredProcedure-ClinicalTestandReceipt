@model ZooAppUsingSp.ViewModels.ClientHeaderVM

<div class="card mb-3" style="width: 30rem;">
    <div class="card-body">
        <h6 class="float-end">@Model.TestDate.ToString("dd/MM/yyyy")</h6>
        <h5 class="card-title mb-1">@Model.ClientName</h5>
        <h6 class="card-subtitle text-body-secondary mb-1">@Model.ClientPhoneNumber</h6>
        <h6 class="card-subtitle text-body-secondary mb-1">@Model.ClientEmailAddress</h6>
        <h6 class="card-subtitle text-body-secondary float-end mb-2">@Model.ReceiptNumber</h6>
        <p class="card-text">
            <span class="visually-hidden" id="@Model.Id">@Model.Id</span>
            <table class="table table-striped table-borderless">
                <tbody>
                    @foreach (var pdvm in Model.TestDetails)
                    {
                        <tr>
                            <td>
                                <span class="visually-hidden" id="@pdvm.Id">@pdvm.Id</span>
                                <span class="visually-hidden" id="@pdvm.TestId">@pdvm.TestId</span>
                                <span class="visually-hidden" id="@pdvm.TestUnitId">@pdvm.TestUnitId</span>
                                @pdvm.TestName
                            </td>
                            <td>
                                @pdvm.Quantity&nbsp;@pdvm.TestUnitName
                            </td>
                            <td>
                                @pdvm.UnitPrice
                            </td>
                            <td>
                                @pdvm.TotalPrice
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </p>
        <hr />
        <h6 class="mb-2">Total Amount:&nbsp;@Model.TotalAmount</h6>
    </div>
</div>